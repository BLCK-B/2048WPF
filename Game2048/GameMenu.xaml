<Page x:Class="Game2048.GameMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="GameMenu"
      Loaded="OnLoad">
    
    <Grid>
        
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            
            <Image Source="Resources\logo.png" Width="200" Height="200" HorizontalAlignment="Center" Margin="0 0 0 20"/>
            
            <TextBox x:Name="textInput" HorizontalAlignment="Center" VerticalAlignment="Center"
                     Width="200" Height="50" Background="#e8e8e8" FontSize="22" FontWeight="Bold" Margin="0,10,0,5" Text="Player"/>

            <Button Width="200" Height="50" Margin="5" FontWeight="Bold" Background="#f67c5f" Click="newGame">New game</Button>

            <Button Width="200" Height="50" Margin="5" FontWeight="Bold" Background="#f2b179" x:Name="continueButton" Click="continueGame">Continue</Button>

            <Button Width="200" Height="50" Margin="5" FontWeight="Bold" Background="#ede0c8" Click="Statistics_Click">Top scores</Button>

            <Button Width="200" Height="50" Margin="5" FontWeight="Bold" Background="#eee4da" Click="exitProgram">Exit</Button>
            
        </StackPanel>
        
        <TextBlock HorizontalAlignment="Right" Margin="0,0,20,5" VerticalAlignment="Bottom" FontWeight="Bold" FontSize="24" Text="by BLCK" Focusable="False" Foreground="#e4e4e4"/>
    </Grid>
</Page>
